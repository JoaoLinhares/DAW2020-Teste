extends layout

block content
  h1 Termos de Índice
  .w3-container.w3-margin
    table.w3-table-all
        tr
            th.w3-center Termo
            th.w3-center IDClasse
            th.w3-center Título
        each t in lista
            tr 
                td.w3-center= t.termo
                    a(name= t.id) #{t.termo}
                td.w3-center
                    a(href='/classes/' + t.idClasse) #{t.idClasse}
                td.w3-center= t.tituloClasse
    div.w3-container(style="text-align:center;")
            button(onclick="window.location.href='/'" style="text-align:center;") Home Page
    footer.w3-container.w3-teal
