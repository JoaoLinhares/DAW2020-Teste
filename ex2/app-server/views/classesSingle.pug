extends layout

block content
  h1= lista.titulo
  p= 'Nível: ' + lista.nivel
  p= 'Código: ' + lista.codigo 
  p= 'Descrição: ' + lista.descricao
  p= 'Status: ' + lista.status
  if lista.nivel < 4 && lista.filhos.length > 0
    .w3-container.w3-margin
        table.w3-table-all
            tr
                th.w3-center Código
                th.w3-center Título
            each t in lista.filhos
                tr 
                    td.w3-center
                        a(href='/classes/' + t.codigo) #{t.codigo}
                    td.w3-center= t.titulo
  if lista.nivel > 2 && lista.termosInd.length > 0
    .w3-container.w3-margin
        table.w3-table-all
            tr
                th.w3-center Termo
            each term in lista.termosInd
                tr 
                    td.w3-center
                        a(href='/termosdeindice#' + term.idTI.split("#").pop()) #{term.termo}
  div.w3-container(style="text-align:center;")
        button(onclick="window.location.href='/'" style="text-align:center;") Home Page
  footer.w3-container.w3-teal
